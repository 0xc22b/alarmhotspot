<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wit.alarmhotspot"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" >
    </uses-permission>
    <uses-permission android:name="android.permission.WAKE_LOCK" >
    </uses-permission>

    <uses-sdk
        android:minSdkVersion="10"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity android:name=".AlarmHotspotAppWidgetConfigure" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_CONFIGURE" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".LogActivity" >
        </activity>
        
        <activity
            android:name=".AlertActivity" >
        </activity>

        <service
            android:name=".AlarmHotspotService"
            android:exported="false" />
        
        <receiver android:name=".AlarmHotspotAppWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
        
        <receiver android:name=".AlarmHotspotBroadcastReceiver" >
        </receiver>
        
        <receiver android:name=".WifiApBroadcastReceiver" >
            <intent-filter>
                <action android:name="android.net.wifi.WIFI_AP_STATE_CHANGED" />
            </intent-filter>
        </receiver>
    </application>
</manifest>